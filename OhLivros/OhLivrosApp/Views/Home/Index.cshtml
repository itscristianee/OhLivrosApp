@model OhLivrosApp.Models.DTO.LivroModelDTO
@{
    ViewData["Title"] = "Home Page";
}

<!-- Form pesquisa (GET) -->
<form method="get" asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center my-2">
    <div class="col-12">
        <label class="visually-hidden" for="generoId">Género</label>
        <select class="form-select" id="generoId" name="generoId">
            <option value="">Selecione o Género..</option>
            @foreach (var g in Model.Generos)
            {
                <option value="@g.Id" selected="@(Model.GeneroId == g.Id ? "selected" : null)">@g.Nome</option>
            }
        </select>
    </div>

    <div class="col-12">
        <label class="visually-hidden" for="termo">Procurar por título</label>
        <div class="input-group">
            <span class="input-group-text">&#128269;</span>
            <input type="text" class="form-control" id="termo" name="termo"
                   value="@(Model.Termo ?? "")" placeholder="Procurar por título" />
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Pesquisar</button>
        <a href="/Home/Index" class="btn btn-dark">Limpar</a>
    </div>
</form>

@* Cards de livros *@
<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var l in Model.Livros)
    {
        <div class="card mx-3 mb-4" style="width: 11rem;">
            @{
                var src = string.IsNullOrWhiteSpace(l.Imagem)
                ? "/imagens/sem-capa.png"
                : (l.Imagem.StartsWith("/") || l.Imagem.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                ? l.Imagem
                : $"/imagens/{l.Imagem}");
            }
            <img style="width:100%;height:180px" src="@src" class="card-img-top" alt="Capa de @l.Titulo" />

            <div class="card-body">
                <h5 class="card-title">@l.Titulo</h5>
                <p class="card-text">
                    <b>Género:</b> @(l.Genero?.Nome ?? "—") <br />
                    <b>Autor:</b> @l.Autor <br />
                    <b>Preço:</b> @l.Preco.ToString("C")
                </p>
                <button type="button" onclick="add(@l.Id)" class="btn btn-primary">Adicionar ao carrinho</button>
            </div>
        </div>
    }
    @if (!Model.Livros.Any())
    {
        <div class="alert alert-info w-100">Nenhum livro encontrado.</div>
    }
</div>


