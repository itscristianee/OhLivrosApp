@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2>Criar uma nova conta.</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="row">
        <!-- Coluna 1: Credenciais e Nome -->
        <div class="col-md-4">
            <hr />
            <div class="form-floating mb-3">
                <input asp-for="Input.Utilizador.Nome" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="Input.Utilizador.Nome"></label>
                <span asp-validation-for="Input.Utilizador.Nome" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Palavra-passe</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Confirmar palavra-passe</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <!-- Coluna 2: Dados do perfil (tabela Utilizadores) -->
        <div class="col-md-6">
            <hr />
            <div class="form-floating mb-3">
                <input asp-for="Input.Utilizador.Morada" class="form-control" autocomplete="street-address" />
                <label asp-for="Input.Utilizador.Morada"></label>
                <span asp-validation-for="Input.Utilizador.Morada" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Utilizador.CodPostal" class="form-control" autocomplete="postal-code" />
                <label asp-for="Input.Utilizador.CodPostal"></label>
                <span asp-validation-for="Input.Utilizador.CodPostal" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Utilizador.Pais" class="form-control" autocomplete="country-name" />
                <label asp-for="Input.Utilizador.Pais"></label>
                <span asp-validation-for="Input.Utilizador.Pais" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Utilizador.NIF" class="form-control" inputmode="numeric" />
                <label asp-for="Input.Utilizador.NIF"></label>
                <span asp-validation-for="Input.Utilizador.NIF" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Utilizador.Telemovel" class="form-control" inputmode="tel" autocomplete="tel" />
                <label asp-for="Input.Utilizador.Telemovel"></label>
                <span asp-validation-for="Input.Utilizador.Telemovel" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                Criar utilizador
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
